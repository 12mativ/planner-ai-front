// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user") // "admin", "team_lead", "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ledTeams          Team[]       @relation("TeamLead")
  memberships       TeamMember[]
  createdTasks      Task[]       @relation("TaskAuthor")
  assignedTasks     Task[]       @relation("TaskAssignees")
  observedTasks     Task[]       @relation("TaskObservers")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String   @default("")
  leadId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  lead     User         @relation("TeamLead", fields: [leadId], references: [id], onDelete: Cascade)
  members  TeamMember[]
  projects Project[]
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  createdAt DateTime @default(now())

  // Relations
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  shortCode   String   @default("PROJ") // Short code like "PROJ" for task prefixes
  description String   @default("")
  teamId      String
  status      String   @default("active") // "active", "completed", "archived"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  team  Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  tasks Task[]
}

model Task {
  id          String   @id @default(cuid())
  taskNumber  Int      // Sequential number within the project
  title       String
  description String   @default("")
  projectId   String
  authorId    String
  priority    String   @default("medium") // "low", "medium", "high", "critical"
  status      String   @default("todo") // "todo", "in_progress", "done"
  parentId    String?  // Optional parent task
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  author        User    @relation("TaskAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  assignees     User[]  @relation("TaskAssignees")
  observers     User[]  @relation("TaskObservers")

  // Task relationships
  parent        Task?   @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  subtasks      Task[]  @relation("TaskHierarchy")
  relatedTasks  Task[]  @relation("RelatedTasks")
  relatedFrom   Task[]  @relation("RelatedTasks")

  @@unique([projectId, taskNumber])
}
